{% block title %}My Tickets{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="{{ path('user_index', {id:user.id}) }}" class="btn btn-outline-light">
                &larr; Back to User
            </a>
        </div>
