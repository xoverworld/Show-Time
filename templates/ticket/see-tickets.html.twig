{% extends 'base.html.twig' %}

{% block title %}My Tickets{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="{{ path('user_index', {id:app.user.id}) }}" class="btn btn-outline-light">
                &larr; Back to User
            </a>
        </div>
        <h2 class="text-white mb-4">üéüÔ∏è My Tickets</h2>

        {% if tickets is empty %}
            <div class="alert alert-info">You haven't purchased any tickets yet.</div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover bg-white text-dark rounded">
                    <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Festival</th>
                        <th>Start Date</th>
                        <th>Location</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ticket in tickets %}
                        <tr>
                            <td>{{ ticket.id }}</td>
                            <td>{{ ticket.festival.name }}</td>
                            <td>{{ ticket.festival.startDate|date('Y-m-d') }}</td>
                            <td>{{ ticket.festival.location }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}

    </div>
{% endblock %}
