{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="text-center mb-4">
            <h1 class="display-4 fw-bold text-white">Show Time</h1>
            <p class="lead text-light">Choose a section to view all entries:</p>
        </div>

        <div class="d-flex justify-content-center gap-4">
           {% if is_granted('ROLE_ADMIN')%}
                <a href="{{ path('users') }}" class="btn btn-outline-light btn-lg shadow">Users</a>
           {% endif %}
            <a href="{{ path('artist') }}" class="btn btn-outline-light btn-lg shadow">Artists</a>
            <a href="{{ path('festival') }}" class="btn btn-outline-light btn-lg shadow">Festivals</a>
        </div>
    </div>
{% endblock %}
