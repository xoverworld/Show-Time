{% extends 'base.html.twig' %}

{% block title %}{{ artist.name }} - Artist Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="{{ path('artist') }}" class="btn btn-outline-light">&larr; Back to Artists</a>
            <h1 class="text-center mb-0 flex-grow-1 text-white">üé§ {{ artist.name }}</h1>
        </div>

        <!-- Artist Card -->
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden mb-5">
            <div class="row g-0">
                <!-- Placeholder / Image -->
                <div class="col-md-4 d-flex align-items-center justify-content-center bg-dark text-white fs-1 fw-bold">
                    {{ artist.name[:1]|upper }}
                </div>

                <!-- Details -->
                <div class="col-md-8">
                    <div class="card-body p-4">
                        <h2 class="mb-2">{{ artist.name }}</h2>
                        <span class="badge bg-primary mb-3">{{ artist.genre }}</span>

{#                        {% if artist.bio %}#}
{#                            <p class="text-muted">{{ artist.bio }}</p>#}
{#                        {% else %}#}
                            <p class="text-muted">This artist has not provided a bio yet.</p>
{#                        {% endif %}#}

                        <ul class="list-unstyled mt-3">
{#                            <li><strong>üéµ Songs:</strong> {{ artist.songCount|default('‚Äî') }}</li>#}
{#                            <li><strong>üìç Location:</strong> {{ artist.country|default('Unknown') }}</li>#}
{#                            <li><strong>üìÖ Active Since:</strong> {{ artist.activeSince|date('Y')|default('‚Äî') }}</li>#}

                            <li><strong>üéµ Songs:</strong> {{ random(3,15) }}</li>
                            <li><strong>üìç Location:</strong> Romania</li>
                            {% set randomYears = random(0, 30) %}
                            {% set pastDate = 'now'|date_modify('-' ~ randomYears ~ ' years') %}
                            <li><strong>üìÖ Active Since:</strong> {{ pastDate|date('Y')}}</li>
                        </ul>

                        <div class="mt-4 d-flex gap-3">
                            <a href="{{ path('artist_update', {id: artist.id}) }}" class="btn btn-warning">Edit</a>
                            <form action="{{ path('artist_delete', {id: artist.id}) }}" method="POST"
                                  onsubmit="return confirm('Are you sure you want to delete this artist?');">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Festivals -->
        <h3 class="text-white mb-3">üé™ Festival Performances</h3>

        {% if artist.festivalArtists is not empty %}
            <div class="row row-cols-1 row-cols-md-2 g-4">
                {% for fa in artist.festivalArtists %}
                    <div class="col">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ fa.festival.name }}</h5>
                                <p class="card-text text-muted">{{ fa.festival.location }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="{{ path('festival_index', {id: fa.festival.id}) }}" class="btn btn-primary">
                                        View Festival
                                    </a>
                                    <a href="{{ path('deleteFestivalArtist', {id: fa.festival.id}) }}" class="btn btn-danger">
                                        Remove from Festival
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-muted">This artist is not currently scheduled for any festivals.</p>
        {% endif %}

    </div>
{% endblock %}
