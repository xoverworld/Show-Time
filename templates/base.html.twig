<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Show Time{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            --card-gradient: linear-gradient(145deg, rgba(255,255,255,0.95), rgba(245,245,245,0.95));
            --glass-bg: rgba(255, 255, 255, 0.08);
            --glass-border: rgba(255, 255, 255, 0.2);
        }

        body {
            background: var(--primary-gradient);
            min-height: 100vh;
            color: #fff;
            font-family: 'Poppins', sans-serif;
            background-attachment: fixed;
        }

        .navbar {
            background: var(--glass-bg) !important;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--glass-border);
        }

        .card {
            background: var(--card-gradient);
            border-radius: 16px;
            border: 1px solid var(--glass-border);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
        }

        .btn-outline-light {
            border: 2px solid rgba(255, 255, 255, 0.7);
            transition: all 0.3s ease;
        }

        .btn-outline-light:hover {
            background: rgba(255, 255, 255, 0.15);
            border: 2px solid white;
        }

        .list-group-item {
            background: transparent;
            border-color: rgba(0, 0, 0, 0.08);
        }

        footer {
            background: var(--glass-bg) !important;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-top: 1px solid var(--glass-border);
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">
<nav class="navbar navbar-expand-lg navbar-dark shadow">
    <div class="container">
        <a class="navbar-brand fw-bold" href="{{ path('homepage') }}">ðŸŽ¤ Show Time</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
{#            <ul class="navbar-nav ms-auto">#}
{#                <li class="nav-item"><a class="nav-link" href="{{ path('users') }}">ðŸ‘¥ Users</a></li>#}
{#                <li class="nav-item"><a class="nav-link" href="{{ path('artist') }}">ðŸŽ¸ Artists</a></li>#}
{#                <li class="nav-item"><a class="nav-link" href="{{ path('festival') }}">ðŸŽª Festivals</a></li>#}
{#            </ul>#}


            <ul class="navbar-nav ms-auto align-items-center">
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('users') }}">ðŸ‘¥ Users</a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('artist') }}">ðŸŽ¸ Artists</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('festival') }}">ðŸŽª Festivals</a>
                </li>

                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path('user_index', {id: app.user.id}) }}">
                            ðŸ‘¤ {{ app.user.email }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="btn btn-outline-light ms-3" href="{{ path('app_login') }}">Login</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<main class="flex-fill container py-5">
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'success' ? 'success' : 'info') }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}
    {% block body %}{% endblock %}
</main>

<footer class="text-white text-center py-4 mt-auto">
    <div class="container">
        <small>&copy; {{ "now"|date("Y") }} Show Time | Your Ultimate Event Experience</small>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
