{% extends 'base.html.twig' %}
{% block title %}Edit User{% endblock %}


{% block body %}
{#<div class="d-flex justify-content-center align-items-center">#}
    <div class="container py=5">
        <div class="d-flex justify-content-between align-items-center">
            <a href="{{ path('users') }}" class="btn btn-outline-light mb-3"> &larr; Back to Users</a>
        </div>
        <div class="d-flex justify-content-center align-items-center">
        <div class="card shadow-lg w-100 mx-3" style="max-width: 700px; border-radius: 1rem;">
            <div class="card-body p-4">
                <h3 class="card-title text-center mb-4">Edit User</h3>

                {% form_theme form 'bootstrap_5_layout.html.twig' %}

                {{ form_start(form) }}
                {{ form_row(form.email) }}
        {#        {{ form_row(form.password) }}#}

                <h5 class="mt-4 mb-2">User Details</h5>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.userDetails.firstName) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.userDetails.lastName) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.userDetails.age) }}
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
                {{ form_end(form) }}

            </div>
        </div>
        </div>

        <div class="d-flex justify-content-center align-items-center mt-4">
    <div class="card shadow-lg w-100 mx-3" style="max-width: 500px; border-radius: 1rem;">
        <div class="card-body p-4">
            <h3 class="card-title text-center mb-4">Change Password</h3>

            {% form_theme form 'bootstrap_5_layout.html.twig' %}

            <form method="POST" action="{{ path('user_change_password', {id:user.id}) }}">
                <label for="password">New Password
                    <input type="text" name="newPassword" id="password" placeholder="New Password">
                </label>
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-success">Update</button>
                    </div>
            </form>

        </div>
    </div>
    </div>
